<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/announcement_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@android:color/darker_gray"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="5dp"
        app:cardCornerRadius="6dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            app:cardCornerRadius="4dp">
            <ImageView
                android:id="@+id/announcement_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_image_24">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/announcement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/announcement_card_view"
        android:paddingStart="15dp"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textSize="16dp"></TextView>
    <TextView
        android:id="@+id/announcement_description"
        android:layout_below="@+id/announcement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/announcement_card_view"
        android:paddingStart="15dp"
        android:text="Description"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textSize="16dp"></TextView>
    <TextView
        android:id="@+id/announcement_date_and_time"
        android:layout_below="@+id/announcement_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/announcement_card_view"
        android:paddingStart="15dp"
        android:text="Nov 12, 2022 5:12:43 PM"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textSize="16dp"></TextView>
</RelativeLayout>